@model IEnumerable<Diplom.User>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Пользователи</title>
</head>


@using (Html.BeginForm())
{
    <p class="search">
        Поиск по имени: <input type="text" name="SearchString" size="70" />
        <input type="submit" value="Поиск" class="btn btn-default btn-outline-dark mybtn" />
    </p>
   
    

}

<body>
    @foreach (var item in Model)
    {
    <div style="display: flex; align-items: center; border:solid; border-width: 1.5px;" class="d-flex justify-content-around">
        <div style="text-align: center; vertical-align: middle; width: 200px; height: 100%; ">
            <p>
                @Html.DisplayFor(modelItem => item.UserId)
            </p>
        </div>
        <div style="text-align: center; vertical-align: middle; width: 200px; height: 100%; border-right: solid #A9A9A9; border-left: solid #A9A9A9; border-width: 1px; ">
            <p>
                @Html.DisplayFor(modelItem => item.Surname)
                @Html.DisplayFor(modelItem => item.Name)
                @Html.DisplayFor(modelItem => item.Patronymic)
            </p>
        </div>
        <div style="text-align: center; vertical-align: middle; width: 200px; height: 100%; border-right: solid #A9A9A9; border-width: 1px; ">
            <p>
                @Html.DisplayFor(modelItem => item.Mark) %
            </p>
        </div>
        <div style="text-align: center;  vertical-align: middle; width: 200px; height: 100%; border-right: solid #A9A9A9; border-width: 1px; ">
            @if (item.Mark <= 30)
            {
                <p style="background-color: green;">
                    Зеленый
                </p>
            }
            else if (item.Mark <= 75)
            {
                <p style="background-color: yellow;">
                    Желтый
                </p>
            }
            else
            {
                <p style="background-color: red;">
                    Красный
                </p>
            }
        </div>
        <div style="text-align: center; vertical-align: middle; width: 200px; height: 100%; ">
            <p>
                @Html.ActionLink("Подробнее", "Info", new { id = item.UserId })
            </p>
            <p>
                @Html.ActionLink("Статистика", "StatUser")
            </p>
        </div>
    </div>
    }
</body>
</html>







